<Window x:Class="Lab4.DaneWejścioweOkno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4"
        mc:Ignorable="d"
        Title="DaneWejścioweOkno" Height="235" Width="462" ResizeMode="NoResize">
    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtSzerokość" Grid.Column="1" HorizontalAlignment="Left" Margin="0,54,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" Height="18" x:FieldModifier="public"/>
        <TextBox x:Name="txtWysokość" Grid.Column="1" HorizontalAlignment="Left" Margin="0,77,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" Height="18" x:FieldModifier="public"/>
        <Button x:Name="btnOK" Content="OK" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="40,0,0,0" VerticalAlignment="Center" Click="btnOK_Click"/>
        <Label x:Name="lblSzerokość" Content="Podaj Szerokość" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="132,40,0,0" VerticalAlignment="Top" Height="32" Width="112"/>
        <Label x:Name="lblWysokość" Content="Podaj Wysokość" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="132,73,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
